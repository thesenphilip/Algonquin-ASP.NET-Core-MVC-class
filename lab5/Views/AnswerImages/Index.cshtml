@model IEnumerable<lab5.Models.AnswerImage>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="AnswerImages" asp-action="Upload">Upload New</a>
</p>
@if (Model.Count() == 0)
{
    <p>There are no files to display.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th><b>File Name</b></th>
                <th><b>Question</b></th>
                <th><b>Image</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Question)
                </td>
                <td>
                    <img src="@item.Url" style="max-width: 400px;" />
                </td>
                <td>
                    <a asp-controller="AnswerImages" asp-action="Delete" asp-route-id="@item.AnswerImageId">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}